{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // Use ESNext for modern compatibility
    "moduleResolution": "bundler", // Recommended modern setting
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Important for project references and sharing types
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Generate source maps for .d.ts files
    "sourceMap": true, // Generate .js.map files
    "composite": true, // Enable project references

    // Define baseUrl relative to this config file
    "baseUrl": "./",
    // Define the alias structure (will be remapped by consumers)
    "paths": {
      "@shared/*": ["./src/*"] // @shared/something maps to shared/src/something
    }
  }
}